<%-include('partials/header')-%>
<div class="container main-container">
  <hr>
  <h1 class="top-heading">Sports</h1>
  <hr>
  <div class="row main-row">
    <%for(i=0;i<data.length;i++){%>
      <div class="card mb-3 news-card col-md-6" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%=data[i].urlToImage%>" class="card-img" alt="image">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=data[i].title%></h5>
            <p class="card-text"><%=data[i].content%>...<a href="<%=data[i].url%>">Read More</a></p>
          </div>
        </div>

      </div>
    </div>
    <%}%>
</div>
</div>
<%-include('partials/side-covid')-%>
<%-include('partials/footer')-%>
